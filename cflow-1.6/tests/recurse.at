AT_SETUP([recursive calls])
AT_KEYWORDS([recurse])

CFLOW_CHECK([
foo()
{
	bar();
}

bar()
{
	bar();
	foo();
}

main()
{
	bar();
}
],
[main() <main () at prog:13>:
    bar() <bar () at prog:7> (R):
        bar() <bar () at prog:7> (recursive: see 2)
        foo() <foo () at prog:2> (R):
            bar() <bar () at prog:7> (recursive: see 2)
])

AT_CLEANUP

